{
  "name": "app",
  "version": "1.0.0",
  "description": "Clean Arch React Boilerplate.",
  "private": true,
  "engines": {
    "node": "14.17.3",
    "npm": "6.14.13",
    "yarn": "1.x"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail 'yarn project dev' 'yarn webpack dev' 'yarn angularjs-webpack dev'",
    "build": "concurrently --kill-others-on-fail 'yarn angularjs-webpack build' 'yarn webpack build'",
    "start": "concurrently --kill-others-on-fail 'yarn project start' 'yarn angularjs-webpack start' 'yarn webpack start'",
    "lint": "concurrently --kill-others-on-fail 'yarn project lint' 'yarn angularjs-webpack lint' 'yarn core lint' 'yarn react lint'",
    "test": "CI=true concurrently --kill-others-on-fail 'yarn project test --runInBand' 'yarn core test --runInBand' 'yarn react test --runInBand'",
    "types": "CI=true concurrently --kill-others-on-fail 'yarn project types' 'yarn core types' 'yarn react types'",
    "core": "yarn workspace @app/core",
    "project": "yarn workspace @app/project",
    "angularjs-webpack": "yarn workspace @app/angularjs-webpack",
    "react": "yarn workspace @app/react",
    "webpack": "yarn workspace @app/webpack",
    "pre-commit": "lint-staged",
    "pretty-quick": "pretty-quick",
    "postinstall": "husky install"
  },
  "workspaces": [
    "core",
    "presentation/**/*"
  ],
  "dependencies": {
    "concurrently": "6.2.0",
    "typescript": "4.3.5"
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@babel/preset-typescript": "7.14.5",
    "@babel/runtime": "7.14.6",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@testing-library/dom": "8.1.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/user-event": "^13.2.0",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.3",
    "@types/systemjs": "6.1.1",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "babel-jest": "26.6.0",
    "babel-loader": "8.2.2",
    "babel-plugin-import": "1.13.3",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-styled-components": "1.13.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.31.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-import-helpers": "1.1.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-transform-stub": "2.0.0",
    "jest-watch-typeahead": "0.6.4",
    "lint-staged": "11.0.1",
    "msw": "0.32.0",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "single-spa-react": "4.2.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-rational-declaration": "2.0.0",
    "stylelint-config-recommended": "5.0.0",
    "stylelint-config-recommended-scss": "4.3.0",
    "stylelint-order": "4.1.0",
    "stylelint-prettier": "1.2.0",
    "stylelint-scss": "3.20.0",
    "ts-jest": "27.0.3",
    "ts-loader": "9.2.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
