{
  "name": "app",
  "version": "1.0.0",
  "description": "Clean Arch React Boilerplate.",
  "private": true,
  "engines": {
    "node": "14.17.3",
    "npm": "6.14.13",
    "yarn": "1.x"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail 'yarn project dev'",
    "build": "concurrently --kill-others-on-fail 'yarn project build'",
    "start": "concurrently --kill-others-on-fail 'yarn project start'",
    "lint": "concurrently --kill-others-on-fail 'yarn project lint'",
    "test": "CI=true concurrently --kill-others-on-fail 'yarn project test'",
    "core": "yarn workspace @app/core",
    "project": "yarn workspace @app/project"
  },
  "workspaces": [
    "core",
    "presentation/project"
  ],
  "dependencies": {
    "concurrently": "6.1.0"
  },
  "devDependencies": {
    "@types/node": "15.6.0"
  }
}